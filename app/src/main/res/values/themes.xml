<resources>
    <!-- Base application theme. -->
    <style name="Theme.MajorRecommendation" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/pale_green</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app</item>

        <!-- Required for animated icons. -->
        <!--        <item name="windowSplashScreenAnimationDuration">1000</item>-->

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.MajorRecommendation</item>
    </style>
</resources>