<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".core.AppCore"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MajorRecommendation"
        tools:targetApi="31">
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SelectClassStudyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.InputSubjectScoreScienceActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.InputSubjectScoreSocialActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ResultRecommendationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MajorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.UniversityActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.UniversityDetailActivity"
            android:exported="false" />

        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>